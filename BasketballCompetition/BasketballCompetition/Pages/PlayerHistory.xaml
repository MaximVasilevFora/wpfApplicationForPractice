<Page x:Class="BasketballCompetition.Pages.PlayerHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BasketballCompetition.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayerHistory">

    <Grid>
		<DataGrid Name="DataGridClubs" IsReadOnly="true" AutoGenerateColumns="False" >
			<DataGrid.Columns>
				<DataGridTextColumn Header="Клуб" Width="*" Binding="{Binding ClubName}"/>
				<DataGridTextColumn Header="Должность" Width="*" Binding="{Binding Post}"/>
				<DataGridTextColumn Header="Игровой номер" Width="*" Binding="{Binding GameNumber}"/>
				<DataGridTextColumn Header="Роль" Width="*" Binding="{Binding Role}"/>
				<DataGridTextColumn Header="Высота" Width="*" Binding="{Binding Height}"/>
				<DataGridTextColumn Header="Вес" Width="*" Binding="{Binding Weight}"/>
				<DataGridTextColumn Header="Дата" Width="*" Binding="{Binding Date}"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</Page>
