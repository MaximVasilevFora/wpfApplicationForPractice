<Page x:Class="BasketballCompetition.Pages.Coach"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BasketballCompetition.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Coach">

    <Grid>
		<DataGrid Name="DataGridClubs" IsReadOnly="true" AutoGenerateColumns="False" >
			<DataGrid.Columns>
				<DataGridTextColumn Header="ФИО" Width="*" Binding="{Binding FCs}"/>
				<DataGridTextColumn Header="Возраст" Width="*" Binding="{Binding Age}"/>
				<DataGridTextColumn Header="Должность" Width="*" Binding="{Binding Post}"/>
				</DataGrid.Columns>
		</DataGrid>
	</Grid>
</Page>
