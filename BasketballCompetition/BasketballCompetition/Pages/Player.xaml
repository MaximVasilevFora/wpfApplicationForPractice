<Page x:Class="BasketballCompetition.Pages.Player"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BasketballCompetition.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Player">

	<Grid Background="White">
		<DataGrid Name="DataGridClubs" IsReadOnly="true" AutoGenerateColumns="False" >
			<DataGrid.Columns>
				<DataGridTextColumn Header="ФИО" Width="*" Binding="{Binding Fcs}"/>
				<DataGridTextColumn Header="Дата рождения" Width="*" Binding="{Binding BirthDate}"/>
				<DataGridTextColumn Header="Должность" Width="*" Binding="{Binding Post}"/>
				<DataGridTextColumn Header="Игровой номер" Width="*" Binding="{Binding GameNumber}"/>
				<DataGridTextColumn Header="Роль" Width="*" Binding="{Binding Role}"/>
				<DataGridTextColumn Header="Высота" Width="*" Binding="{Binding Height}"/>
				<DataGridTextColumn Header="Вес" Width="*" Binding="{Binding Weight}"/>
				<DataGridTextColumn Header="Название клуба" Width="*" Binding="{Binding Club.Name}"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</Page>
