<Page x:Class="BasketballCompetition.Pages.TrainingHall"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BasketballCompetition.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TrainingHall">

    <Grid>
		<DataGrid Name="DataGridClubs" IsReadOnly="true" AutoGenerateColumns="False" >
			<DataGrid.Columns>
				<DataGridTextColumn Header="Название" Width="*" Binding="{Binding Name}"/>
				<DataGridTextColumn Header="Адрес" Width="*" Binding="{Binding Address}"/>
				<DataGridTextColumn Header="Емкость" Width="*" Binding="{Binding Capacity}"/>
				<DataGridTextColumn Header="Телефон" Width="*" Binding="{Binding Phone}"/>
				<DataGridTextColumn Header="Категория" Width="*" Binding="{Binding Category.Type}"/>
				<DataGridTextColumn Header="Клуб" Width="*" Binding="{Binding Club.Name}"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</Page>
